<style>
  #horse {
      width: 100px;
      height: 100px;
      position: absolute;
      margin-top: 40px;
      animation: jostleImage ease-in-out 0.1s infinite alternate;
      transition: left 3s linear;
  }

  @keyframes jostleImage {
      0%   { transform: rotate(15deg); }
      100% { transform: rotate(-5deg); }
  }
</style>

<div id="horse<%= horse.id %>">
    <div id="horse", style="top: <%= track_index * 15%>px; left: <%= horse.position %>%;">
        <b><%= horse.name.capitalize %> <b>
        <%= image_tag horse.image, width: 100, height: 100%>
    </div>
</div>
