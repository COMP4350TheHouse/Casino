<script>

function showBettingMenu() {
    document.getElementById("main_betting_menu").style.visibility = 'visible';
}

function hideBettingMenu() {
    document.getElementById("main_betting_menu").style.visibility = 'hidden';
}

let cash = 100;
let test_ratio = ""

// Needs to work for each portion
function getBetValue(char, id) {
    var bet_value_str = document.getElementById(id).value;

    if (bet_value_str == null || bet_value_str == "") {
        return 0.0;
    }

    return parseFloat(bet_value_str);
}

function isNumberKey(evt, id) {
    var charCode = (evt.which) ? evt.which : evt.keyCode

    if (charCode > 31 && (charCode < 48 || charCode > 57))
        return false;

    // Checks if the value is above "Cash"
    var bet_value = getBetValue(String.fromCharCode(charCode), id);

    // Avoids changing the text input to have a 0 in it when it should be empty
    if (bet_value == 0) {
        document.getElementById(id + "_payout").innerText = "";
        return false;
    }

    // Cap the max bet to the amount of cash
    if (bet_value > cash)
        bet_value = cash;

    // Adjust the associated payout bo
    document.getElementById(id).value = bet_value;
    document.getElementById(id + "_payout").innerText = bet_value * 2;

    return true;
}
</script>

