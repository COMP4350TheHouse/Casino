<%= stylesheet_link_tag 'card-layout.css', media: 'all' %>

<div class="card-layout">
  <h1>Sign in</h1>

  <%= tag.div(flash[:alert], class: "alert") if flash[:alert] %>
  <%= tag.div(flash[:notice], class: "notice") if flash[:notice] %>

  <%= form_with model: @session, url: session_path do |form| %>
    <div class="form-section">
      <label>Username or email</label>
      <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", value: params[:username] %>
    </div>
    <div class="form-section">
      <label>Password</label>
      <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72 %>
    </div>
    <div class="form-section">
      <%= form.submit "Sign in" %>
    </div>
    <div class="form-section">
      <p>No account? <%= link_to "Create one here.", new_user_path %></p>
    </div>
  <% end %>
</div>
