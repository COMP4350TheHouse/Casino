<%= stylesheet_link_tag 'lobby.css', media: 'all' %>

<div id="lobby-body">
    <div id="carpet-div">
        <div id="main-text" class="lobby-main">
        </div>
    </div> 
    <div class="lobby-game" id="horse-racing">
        <%= button_to horse_race_index_path, method: :get, remote: true do %>
            <h2>Horse Racing</h2>
        <%end%>
    </div>
    <div class="lobby-game" id="roulette">
        <%=link_to roulette_roulette_board_path, method: :post, data: { turbo: false } do%>
            <%= render 'shared/lobby_roulette_wheel'%>
        <%end%>
    </div>
</div>